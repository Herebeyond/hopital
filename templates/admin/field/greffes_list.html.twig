    <div class="badge-list">
        {% for greffe in value %}
            <a href="{{ ea_url().setController('App\\Controller\\Admin\\GreffeCrudController').setAction('detail').setEntityId(greffe.id) }}" 
               class="badge badge-info mb-1" 
               title="Voir dÃ©tails">
                Greffe #{{ greffe.id }} - {{ greffe.dateGreffe|date('d/m/Y') }}
            </a>
        {% endfor %}
    </div>
    <small class="text-muted">{{ value|length }} greffe(s)</small>

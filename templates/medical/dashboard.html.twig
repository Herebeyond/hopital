{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord Médical{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2"><i class="fas fa-hospital"></i> Tableau de Bord Médical</h1>
            <p class="text-muted">Gestion des Greffes Rénales</p>
        </div>
    </div>

    {# Statistics Cards #}
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Patients</h6>
                            <h2 class="mb-0">{{ stats.patients }}</h2>
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-user-injured fa-3x opacity-50"></i>
                        </div>
                    </div>
                    <a href="{{ path('medical_patients') }}" class="btn btn-sm btn-outline-primary mt-3 w-100">
                        <i class="fas fa-list"></i> Voir les patients
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Greffes</h6>
                            <h2 class="mb-0">{{ stats.greffes }}</h2>
                            <small class="text-success">{{ stats.greffes_actives }} actives</small>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-heart fa-3x opacity-50"></i>
                        </div>
                    </div>
                    <a href="{{ path('medical_greffes') }}" class="btn btn-sm btn-outline-success mt-3 w-100">
                        <i class="fas fa-list"></i> Voir les greffes
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Donneurs</h6>
                            <h2 class="mb-0">{{ stats.donneurs }}</h2>
                            <small class="text-muted">
                                {{ stats.donneurs_vivants }} vivants | {{ stats.donneurs_decedes }} décédés
                            </small>
                        </div>
                        <div class="text-info">
                            <i class="fas fa-hand-holding-heart fa-3x opacity-50"></i>
                        </div>
                    </div>
                    <a href="{{ path('medical_donneurs') }}" class="btn btn-sm btn-outline-info mt-3 w-100">
                        <i class="fas fa-list"></i> Voir les donneurs
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Quick Actions #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Accès Rapide</h5>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <a href="{{ path('medical_patients') }}" class="btn btn-outline-primary w-100">
                                <i class="fas fa-user-injured"></i> Patients
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('medical_greffes') }}" class="btn btn-outline-success w-100">
                                <i class="fas fa-heart"></i> Greffes
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('medical_donneurs') }}" class="btn btn-outline-info w-100">
                                <i class="fas fa-hand-holding-heart"></i> Donneurs
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('medical_references') }}" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-database"></i> Données de Référence
                            </a>
                        </div>
                    </div>
                    
                    {# Doctor/Admin actions #}
                    {% if is_granted('ROLE_DOCTOR') %}
                    <hr class="my-3">
                    <div class="row g-2">
                        <div class="col-12">
                            <p class="text-muted mb-2"><small><i class="fas fa-user-md"></i> Actions Médecin</small></p>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-success w-100" disabled title="Fonctionnalité à venir">
                                <i class="fas fa-plus"></i> Nouveau Patient
                            </button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-success w-100" disabled title="Fonctionnalité à venir">
                                <i class="fas fa-plus"></i> Nouvelle Greffe
                            </button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-success w-100" disabled title="Fonctionnalité à venir">
                                <i class="fas fa-plus"></i> Nouveau Donneur
                            </button>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Recent Transplants #}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-clock"></i> Greffes Récentes</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Date</th>
                                    <th>Patient</th>
                                    <th>N° Dossier</th>
                                    <th>Type Donneur</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for greffe in recent_greffes %}
                                <tr>
                                    <td><strong>#{{ greffe.id_greffon }}</strong></td>
                                    <td>{{ greffe.Date_greffe|date('d/m/Y') }}</td>
                                    <td>{{ greffe.patient_nom }} {{ greffe.patient_prenom }}</td>
                                    <td>{{ greffe.Ndossier }}</td>
                                    <td>
                                        {% if greffe.Type_donneur == 'vivant' %}
                                            <span class="badge bg-info">Vivant</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Décédé</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if greffe.Greffon_fonctionnel %}
                                            <span class="badge bg-success">Fonctionnel</span>
                                        {% else %}
                                            <span class="badge bg-danger">Non fonctionnel</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('medical_greffe_detail', {id: greffe.id_greffon}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Détails
                                        </a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        Aucune greffe récente
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

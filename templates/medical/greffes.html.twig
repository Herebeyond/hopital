{% extends 'base.html.twig' %}

{% block title %}Gestion des Greffes{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="h2"><i class="fas fa-heart"></i> Gestion des Greffes</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('medical_dashboard') }}">Tableau de bord</a></li>
                    <li class="breadcrumb-item active">Greffes</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-6 text-end">
            {% if is_granted('ROLE_DOCTOR') %}
            <button class="btn btn-success me-2" disabled title="Fonctionnalité à venir">
                <i class="fas fa-plus"></i> Enregistrer une Greffe
            </button>
            {% endif %}
            <a href="{{ path('medical_dashboard') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    {# Filters #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" action="{{ path('medical_greffes') }}">
                        <div class="row g-2">
                            <div class="col-md-3">
                                <select name="status" class="form-select" onchange="this.form.submit()">
                                    <option value="all" {% if status == 'all' %}selected{% endif %}>Toutes les greffes</option>
                                    <option value="actif" {% if status == 'actif' %}selected{% endif %}>Greffons fonctionnels</option>
                                    <option value="inactif" {% if status == 'inactif' %}selected{% endif %}>Greffons non fonctionnels</option>
                                </select>
                            </div>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control" 
                                           placeholder="Rechercher par nom patient, N° dossier ou N° Cristal..." 
                                           value="{{ search }}">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fas fa-search"></i> Rechercher
                                    </button>
                                    {% if search or status != 'all' %}
                                    <a href="{{ path('medical_greffes') }}" class="btn btn-outline-secondary">
                                        <i class="fas fa-times"></i> Réinitialiser
                                    </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {# Transplants List #}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Liste des Greffes ({{ greffes|length }})</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Date</th>
                                    <th>Patient</th>
                                    <th>N° Dossier</th>
                                    <th>N° Cristal Donneur</th>
                                    <th>Rang</th>
                                    <th>Type Donneur</th>
                                    <th>Risque Immuno.</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for greffe in greffes %}
                                <tr>
                                    <td><strong>#{{ greffe.id_greffon }}</strong></td>
                                    <td>{{ greffe.Date_greffe|date('d/m/Y') }}</td>
                                    <td>{{ greffe.patient_nom }} {{ greffe.patient_prenom }}</td>
                                    <td><span class="badge bg-secondary">{{ greffe.Ndossier }}</span></td>
                                    <td>{{ greffe.N_Cristal }}</td>
                                    <td><span class="badge bg-info">{{ greffe.Rang_greffe }}</span></td>
                                    <td>
                                        {% if greffe.Type_donneur == 'vivant' %}
                                            <span class="badge bg-info">Vivant</span>
                                        {% elseif greffe.Type_donneur == 'décédé' %}
                                            <span class="badge bg-secondary">Décédé</span>
                                        {% endif %}
                                    </td>
                                    <td><small>{{ greffe.Libelle_immunologique }}</small></td>
                                    <td>
                                        {% if greffe.Greffon_fonctionnel %}
                                            <span class="badge bg-success">Fonctionnel</span>
                                        {% else %}
                                            <span class="badge bg-danger">Non fonctionnel</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('medical_greffe_detail', {id: greffe.id_greffon}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Détails
                                        </a>
                                        {% if is_granted('ROLE_DOCTOR') %}
                                        <button class="btn btn-sm btn-outline-warning ms-1" disabled title="Fonctionnalité à venir">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="10" class="text-center text-muted">
                                        {% if search %}
                                            Aucune greffe trouvée pour "{{ search }}"
                                        {% else %}
                                            Aucune greffe enregistrée
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

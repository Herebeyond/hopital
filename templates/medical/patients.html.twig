{% extends 'base.html.twig' %}

{% block title %}Gestion des Patients{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="h2"><i class="fas fa-user-injured"></i> Gestion des Patients</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('medical_dashboard') }}">Tableau de bord</a></li>
                    <li class="breadcrumb-item active">Patients</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-6 text-end">
            {% if is_granted('ROLE_DOCTOR') %}
            <button class="btn btn-success me-2" disabled title="Fonctionnalité à venir">
                <i class="fas fa-plus"></i> Ajouter un Patient
            </button>
            {% endif %}
            <a href="{{ path('medical_dashboard') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    {# Search Bar #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" action="{{ path('medical_patients') }}">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" 
                                   placeholder="Rechercher par nom, prénom ou numéro de dossier..." 
                                   value="{{ search }}">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search"></i> Rechercher
                            </button>
                            {% if search %}
                            <a href="{{ path('medical_patients') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Effacer
                            </a>
                            {% endif %}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {# Patients List #}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Liste des Patients ({{ patients|length }})</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>N° Dossier</th>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Date de Naissance</th>
                                    <th>Ville</th>
                                    <th>Nb Greffes</th>
                                    <th>Médecin Référent</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for patient in patients %}
                                <tr>
                                    <td><strong>#{{ patient.id_patient }}</strong></td>
                                    <td><span class="badge bg-secondary">{{ patient.Ndossier }}</span></td>
                                    <td>{{ patient.Nom }}</td>
                                    <td>{{ patient.Prenom }}</td>
                                    <td>{{ patient.Date_naissance|date('d/m/Y') }}</td>
                                    <td>{{ patient.Ville_res }} ({{ patient.CP }})</td>
                                    <td>
                                        <span class="badge bg-info">{{ patient.nb_greffes }}</span>
                                    </td>
                                    <td>{{ patient.medecin_nom }} {{ patient.medecin_prenom }}</td>
                                    <td>
                                        <a href="{{ path('medical_patient_detail', {id: patient.id_patient}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Détails
                                        </a>
                                        {% if is_granted('ROLE_DOCTOR') %}
                                        <button class="btn btn-sm btn-outline-warning ms-1" disabled title="Fonctionnalité à venir">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="9" class="text-center text-muted">
                                        {% if search %}
                                            Aucun patient trouvé pour "{{ search }}"
                                        {% else %}
                                            Aucun patient enregistré
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

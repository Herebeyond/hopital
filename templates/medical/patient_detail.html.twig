{% extends 'base.html.twig' %}

{% block title %}Détails Patient - {{ patient.Nom }} {{ patient.Prenom }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="h2"><i class="fas fa-user-injured"></i> Dossier Patient</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('medical_dashboard') }}">Tableau de bord</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('medical_patients') }}">Patients</a></li>
                    <li class="breadcrumb-item active">{{ patient.Nom }} {{ patient.Prenom }}</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-6 text-end">
            {% if is_granted('ROLE_DOCTOR') %}
            <button class="btn btn-warning me-2" disabled title="Fonctionnalité à venir">
                <i class="fas fa-edit"></i> Modifier
            </button>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
            <button class="btn btn-danger me-2" disabled title="Fonctionnalité à venir">
                <i class="fas fa-trash"></i> Supprimer
            </button>
            {% endif %}
            <a href="{{ path('medical_patients') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    {# Patient Information #}
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Informations Patient</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">ID Patient:</th>
                            <td><strong>#{{ patient.id_patient }}</strong></td>
                        </tr>
                        <tr>
                            <th>N° Dossier:</th>
                            <td><span class="badge bg-secondary">{{ patient.Ndossier }}</span></td>
                        </tr>
                        <tr>
                            <th>Nom:</th>
                            <td>{{ patient.Nom }}</td>
                        </tr>
                        <tr>
                            <th>Prénom:</th>
                            <td>{{ patient.Prenom }}</td>
                        </tr>
                        <tr>
                            <th>Date de Naissance:</th>
                            <td>{{ patient.Date_naissance|date('d/m/Y') }}</td>
                        </tr>
                        <tr>
                            <th>Ville:</th>
                            <td>{{ patient.Ville_res }}</td>
                        </tr>
                        <tr>
                            <th>Code Postal:</th>
                            <td>{{ patient.CP }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-user-md"></i> Médecin Référent</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Médecin:</th>
                            <td>{{ patient.medecin_nom }} {{ patient.medecin_prenom }}</td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-line"></i> Statistiques</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-around text-center">
                        <div>
                            <h3 class="text-success">{{ greffes|length }}</h3>
                            <small class="text-muted">Greffes</small>
                        </div>
                        <div>
                            <h3 class="text-info">
                                {{ greffes|filter(g => g.Greffon_fonctionnel)|length }}
                            </h3>
                            <small class="text-muted">Actives</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Transplant History #}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-history"></i> Historique des Greffes</h5>
                </div>
                <div class="card-body">
                    {% if greffes|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Date</th>
                                    <th>Rang</th>
                                    <th>Type Donneur</th>
                                    <th>N° Cristal</th>
                                    <th>Groupe Sanguin</th>
                                    <th>Risque Immunologique</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for greffe in greffes %}
                                <tr>
                                    <td><strong>#{{ greffe.id_greffon }}</strong></td>
                                    <td>{{ greffe.Date_greffe|date('d/m/Y') }}</td>
                                    <td><span class="badge bg-info">{{ greffe.Rang_greffe }}</span></td>
                                    <td>
                                        {% if greffe.Type_donneur == 'vivant' %}
                                            <span class="badge bg-info">Vivant</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Décédé</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ greffe.N_Cristal }}</td>
                                    <td>
                                        {% if greffe.donneur_groupe %}
                                            <span class="badge bg-danger">{{ greffe.donneur_groupe }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <small>{{ greffe.Libelle_immunologique }}</small>
                                    </td>
                                    <td>
                                        {% if greffe.Greffon_fonctionnel %}
                                            <span class="badge bg-success">Fonctionnel</span>
                                        {% else %}
                                            <span class="badge bg-danger">Non fonctionnel</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('medical_greffe_detail', {id: greffe.id_greffon}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Détails
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle"></i> Aucune greffe enregistrée pour ce patient
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
